<p id="notice"><%= notice %></p>

<h1>Products</h1> 
    

<table>
  <thead>
    <tr>
      <th>Pro title</th>
      <th>Pro des</th>
      <th>Userid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.pro_title %></td>
        <td><%= product.pro_des %></td>
        <td><%= product.userid %></td>
        <td width="50"><%= link_to 'Show', product %></td> 
        <td width="50"><%= link_to 'Edit', edit_product_path(product) %></td> 
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

